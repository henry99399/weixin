.searchCenter{
  background: #f5f8fa;
}
.searchForm{
  padding: 1rem 30rpx;
  float: left;
  width: 100%;
  box-sizing: border-box;
}
.searchForm input{
  float: left;
  width: 80%;
  border: 1px #e5e8ea solid;
  height: 2rem;
  background: #fff;
  font-size: 0.9em;
  padding: 0 10px;
  line-height: 2rem;
  box-sizing: border-box;
}
.searchForm button{
  float: left;
  width: 20%;
  box-sizing: border-box;
  height: 2rem;
  padding: 0;
  line-height: 2rem;
  font-size: 1em;
  border: none;
  color: #fff;
  background: #f53d3d;
  border-radius: 0 3px 3px 0;
}
.searchKeys{
  background: #fff;
  padding: 30rpx;
  float: left;
  width: 100%;
  box-sizing: border-box;
}
.searchKeys label{
  border: 1px #eee solid;
  border-radius: 20px;
  margin: 0 15rpx 20rpx 0;
  float: left;
  font-size: 0.8rem;
  padding: 3px 10px;
  color: #666;
  text-align: center;
  min-width: 35px;
}
.searchKeys label:hover, .searchKeys label:active{
  background: #d5d8da;
}
.bookList{
  float: left;
  width: 100%;
  min-height: calc(100vh - 4rem);
}
.loading{
  text-align: center;
  line-height: 30px;
  border-top: 10px #f5f8fa solid;
  float: left;
  width: 100%;
  color: #999;
  font-size: 0.8rem;
}
.searchTotal{
  padding: 0 30rpx 1rem 30rpx;
  background: #f5f8fa;
  color: #898989;
  font-size: 0.7rem;
}
.bookInfo{
  background: #fff;
  padding: 30rpx;
  box-sizing: border-box;
  border-bottom: 1px #e5e8ea solid;
  float: left;
  width: 100%;
}
.bookInfo .cover{
  float: left;
  width: 23vw;
  height: 30vw;
  border: 1px #eee solid;
  box-sizing: border-box;
}
.bookInfo .cover image{
  float: left;
  width: 100%;
  height: 100%;
}
.bookInfo .detail{
  float: left;
  width: calc(100% - 23vw);
  padding-left: 20rpx;
  box-sizing: border-box;
}
.bookInfo .detail  .book_name{
  float: left;
  width: 100%;
  margin-bottom: 10rpx;
  white-space: nowrap;
  overflow: hidden;
  text-overflow: ellipsis;
}
.bookInfo .detail .book_remark{
  float: left;
  width: 100%;
  font-size: 0.7rem;
  color: #676767;
  line-height: 1rem;
  -webkit-box-orient: vertical;
  display: -webkit-box;
  -webkit-box-flex: 1;
  -ms-flex: 1;
  flex: 1;
  -webkit-line-clamp:3;
  word-wrap: break-word;
  overflow: hidden;
  -webkit-box-pack: center;
  max-height: 3rem;
}
.bookInfo .tap{
  float: left;
  width: 100%;
  font-size: 0.7rem;
  color: #676767;
  margin-top: 10rpx;
}
.bookInfo .tap .cat{
  float: right;
}