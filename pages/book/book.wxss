.head{
  float: left;
  width: 100%;
  box-sizing: border-box;
  padding: 20rpx 50rpx;
}
.cover{
  float: left;
  width: 30vw;
  height: 40vw;
  box-shadow: 0 0 5px #ddd;
}
.cover image{
  width: 100%;
  height: 100%;
}
.detail{
  float: left;
  width: calc(100% - 30vw);
  box-sizing: border-box;
  padding-left: 30rpx;
}
.detail .book_publisher{
  font-size: 0.8rem;
  color: #9c9c9c;
  margin: 10rpx 0;
}
.detail .cat_name{
  font-size: 0.8rem;
  color: #9c9c9c;
  margin: 10rpx 0;
}
.detail .price{
  font-size: 0.8rem;
  color: #f63;
  margin: 10rpx 0;
}
