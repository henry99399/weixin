.actions{
  float: left;
  box-sizing: border-box;
  text-align: center;
  width: 100%;
  padding: 30rpx 50rpx 0 50rpx;
}
.actions button{
  width: 50%;
  float: left;
  font-size: 0.9rem;
  background: #fff;
}
.actions button::after{
  border: 0;
}
.actions button:first-child{
  border: none;
  color: #06d310;
}
.actions button:last-child{
  border: none;
  color: #f53d3d;
}
.mulu{
  float: left;
  width: 100%;
  box-sizing: border-box;
  border-bottom: 10px #f5f8fa solid;
  padding: 0 30rpx;
  margin-top: 30rpx;
  border-top: 1px #eee solid;
  line-height: 3rem;
  font-size: 0.8rem;
  color: #9f9f9f;
}
.mulu .link{
  float: right;
}
.tj{
  float: left;
  width: 100%;
}
.tj .title{
  line-height: 2rem;
  padding: 0 30rpx;
  float: left;
  width: 100%;
  box-sizing: border-box;
}
.tjList{
  float: left;
  width: 100%;
  padding: 15rpx;
  box-sizing: border-box;
}
.tjList .book{
 float: left;
 width: 33.3333%;
 padding: 15rpx;
 box-sizing: border-box; 
}
.book .cover{
  float: left;
  width: 100%;
  height: 37vw;
}
.cover image{
  width: 100%;
  height: 100%;
}
.book text{
  float: left;
  width: 100%;
  box-sizing: border-box;
  font-size: 0.7rem;
  line-height: 1rem;
  color: #999;
  height: 2.5rem;
  overflow: hidden;
  padding-top: 0.5rem;
}

button.end{
  color: #999 !important;
}