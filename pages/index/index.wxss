/**index.wxss**/

.search{
  background: #f7f7f7;
  box-sizing: border-box;
  overflow: hidden;
  font-size: 0.9rem;
  color: #afafaf;
  height: 2rem;
  padding: 0.5rem;
  margin: 0 20rpx;
}
.search icon{
  height: 1rem;
  line-height: 1rem;
  margin-right: 10rpx;
  float: left;
  box-sizing: border-box;
}
.search label{
  float: left;
  height: 1rem;
  line-height: 1rem;
}
.search input{
  font-size: 0.9rem;
}


.shlef{
  width: 100%;
  float: left;
  padding: 10rpx;
  box-sizing: border-box;
}
.shlef .book{
  width: 33.3333%;
  overflow: hidden;
  padding: 40rpx 10rpx 10rpx 10rpx;
  float: left;
  box-sizing: border-box;
}
.shlef .book image{
  float: left;
  width: 100%;
  height: 38vw;
  box-sizing: border-box;
  box-shadow: 2px 2px 3px #ddd;
}
.shlef .bookAdd{
  float: left;
  width: 100%;
  height: 100%;
  line-height: 38vw;
  text-align: center;
  border: 1px #eee solid;
  box-sizing: border-box;
  font-size: 50rpx;
  color: #aaa;
}


.userinfo {
  display: flex;
  flex-direction: column;
  align-items: center;
}

.userinfo-avatar {
  width: 128rpx;
  height: 128rpx;
  margin: 20rpx;
  border-radius: 50%;
}

.userinfo-nickname {
  color: #aaa;
}

.usermotto {
  margin-top: 200px;
}